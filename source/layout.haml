  %head
    %title Kris Urbas: more than web developer
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "frontend developer, UX designer, specializing in product development for startups, currently living in Berlin, Germany", :name => "description"}
    %meta{:content => "@krzysu", :name => "author"}
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}

    %meta{:property => 'og:url', :content => 'http://www.myviews.pl'}
    %meta{:property => 'og:title', :content => 'Kris Urbas: more than web developer'}
    %meta{:property => 'og:description', :content => 'frontend developer, UX designer, specializing in product development for startups, currently living in Berlin, Germany'}
    %meta{:property => 'og:image', :content => 'http://www.myviews.pl/images/home.jpg'}

    // check if JS is enabled in browser
    :javascript
      document.documentElement.className = document.documentElement.className.replace(/\bno-js\b/,'') + ' js';

    /[if lt IE 9]
      %script{:src => "http://html5shiv.googlecode.com/svn/trunk/html5.js"}
      = javascript_include_tag 'ie/selectivizr-min.js'

    %link{:href => 'http://fonts.googleapis.com/css?family=Lato|Merriweather:400,900', :rel => 'stylesheet', :type => 'text/css'}
    = stylesheet_link_tag "application"
    = yield_content :head

    %link{:href => "favicon.ico?v=2", :rel => "shortcut icon"}

    // google analytics
    :javascript

      if( location.host == 'myviews.pl' || location.host == 'www.myviews.pl') {

        var _gaq = _gaq || [];
        var pluginUrl = '//www.google-analytics.com/plugins/ga/inpage_linkid.js';
        _gaq.push(['_setAccount', 'UA-9904630-1']);
        _gaq.push(['_require', 'inpage_linkid', pluginUrl]);
        _gaq.push(['_trackPageview']);
        _gaq.push(['_trackPageLoadTime']);
        _gaq.push(['_anonymizeIp']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

      } else {

        if( typeof(_gaq) === 'undefined' ) {
          _gaq = {
            push: function( data ) {
              // logging what will be sent to google on live
              console.log( '_gaq.push', data );
            }
          };
        };
        
      };

  %body{:class => 'index-page'}
    = yield
    #content-loader

    %script{:src => "https://cdn.firebase.com/v0/firebase.js"}
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"}
    %script
      window.jQuery || document.write('<script src="javascripts/libs/jquery.1.8.3.min.js"><\/script>')
  
    = javascript_include_tag "application"
    = yield_content :js

