%header#header
  .wrapper
    %a.title{:href => '#!/'}
      more than
      %em web developer

    %a.go-to-menu{:href => '#', :title => 'menu'} &#9776;

    %nav#main-menu
      %ul
        %li.menu-item.start
          %a{:href => '#!/'} start
        %li.menu-item.about
          %a{:href => '#!/about'} about
        %li.menu-item.contact
          %a{:href => '#!/contact'} contact
        %li.menu-item.blog
          %a{:href => 'http://blog.myviews.pl/', :target => '_blank'} blog

// main sections
%section#main-section
  .wrapper
    .flexslider
      %ul.slides
        %li#index-page.page
          = partial 'partials/index'
        %li#about-page.page
          = partial 'partials/about'
        %li#contact-page.page
          = partial 'partials/contact'

%section#bottom-section
  .wrapper
    = partial 'partials/go_top'
    = partial 'partials/share'
    = partial 'partials/go_top'
    = partial 'partials/feedback'
    = partial 'partials/go_top'

