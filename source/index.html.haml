%header#header
  .wrapper
    %a.title{:href => '#!/'}
      more than
      %em web developer

    %a.go-to-menu{:href => '#'} Menu

    %nav#main-menu
      %ul
        %li
          %a{:href => '#!/'} start
        %li
          %a{:href => '#!/about'} about
        %li
          %a{:href => '#!/contact'} contact

// main sections
%section#main-section
  .wrapper
    .flexslider
      %ul.slides
        %li#index-page
          .page
            = partial 'partials/index'
        %li#about-page
          .page
            = partial 'partials/about'
        %li#contact-page
          .page
            = partial 'partials/contact'

%section
  .wrapper
    = partial 'partials/share'
    = partial 'partials/feedback'

%footer#footer
  .wrapper
    = partial 'partials/footer'



// dynamically created
%ul.hidden
  %li#about-front-end-page
